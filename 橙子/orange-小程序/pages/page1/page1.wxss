/* pages/page1/page1.wxss */


/* 清除浮动 */
.clear{
  clear: both;
}

/* 页头部分 */
.header {
  width: 100%;
  height: 80rpx;
  background-color: orangered;
  position: fixed;
  top: 0;
  z-index: 5;
}
.hea{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  text-align: center;
}
.hea image{
  width: 60rpx;
  height: 60rpx;
}
.header-1{
  margin-left: 15rpx;
  margin-right: 187rpx;
}
.header-3{
  margin: 0 25rpx;
}
.header-5{
  margin-left: 187rpx;
  margin-right: 15rpx;
}


/* page-top部分 */
.page-top{
  width: 100%;
  height: 360rpx;
  background-color: orangered;
}
.top-nav {
  width: 100%;
  height: 90rpx;
  background-color: orangered;
}
.top-nav text{
  display: inline-block;
  width: 250rpx;
  height: 80rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: white;
}
.top-nav view{
  width: 56rpx;
  height: 6rpx;
  background-color: white;
  margin-left: 100rpx;
}
.bj{
  width: 100%;
  height: 250rpx;
  background-color: orangered;
  position: absolute;
  top: 155rpx;
}
.top-swiper{
  width: 94%;
  height: 350rpx;
  margin-top: 187rpx;
  margin-left: 3%;
}
.top-swiper swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}


/* middle-nav部分 */
.middle-nav{
  width: 100%;
  height: 260rpx;
  /* background-color: yellow; */
  margin-top: 30rpx;
  border-bottom: 2rpx gray solid;
}
.nav-1{
  width: 150rpx;
  height: 200rpx;
  margin-top: 30rpx;
  /* background-color: blue; */
  text-align: center;
  display: inline-block;
  margin: 20rpx 18rpx;
}
.nav-1-top{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: orangered;
}
.nav-1-top image{
  margin: 35rpx;
  width: 80rpx;
  height: 80rpx;
}
.nav-1 text{
  font-size: 28rpx;
}

/* 推荐歌单部分 */
.recList{
  width: 100%;
  margin-top: 30rpx;
}
.recList text{
  font-size: 36rpx;
  margin-left: 5rpx;
}
.recList-title-2{
  color: gray;
}
.recList-show{
  width: 100%;
  margin-top: 15rpx;
}
.recList-show-1{
  width: 230rpx;
  height: 310rpx;
  margin: 10rpx 10rpx 20rpx 10rpx;
  /* background-color: yellow; */
  display: inline-block;
}
.recList-show-1 image{
  width: 230rpx;
  height: 230rpx;
  border-radius: 10rpx;
}
.recList-show-1 text{
  display: block;
  margin-top: 0;
  font-size: 24rpx;
  line-height: 30rpx;
}

/* vipZone会员专区部分 */
.vipZone{
  width: 100%;
  height: 600rpx;
  background-color: rgb(255, 69, 00);
}
.vipZone-title{
  width: 100%;
  height: 100rpx;
  /* background-color: yellowgreen; */
  text-align: center;
}
.vipZone-title text{
  font-size: 36rpx;
  line-height: 100rpx;
  color: white;
}
.vipZone-swiper {
  width: 100%;
  height: 350rpx;
  text-align: center;
}
.vipZone-swiper swiper-item image{
  width: 94%;
  height: 100%;
  border-radius: 10rpx;
}
.vipZone-bottom{
  width: 100%;
  height: 94rpx;
  /* background-color: green; */
  margin-top: 30rpx;
  text-align: center;
}
.vipZone-bottom button{
  width: 45%;
  height: 90rpx;
  border-radius: 45rpx;
  /* border: 2rpx gray solid; */
  color: white;
  background-color: rgba(255, 255, 255, 0.3);
}


/* list部分 */
.list-bg{
  width: 750rpx;
  height: 1205rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
}
.list {
  width: 600rpx;
  height: 1205rpx;
  background-color: greenyellow;
}
.list-top{
  width: 100%;
  height: 300rpx;
  background-color: rgba(0,0,0,0.6);
}
.headImg{
  width: 150rpx;
  height: 150rpx;
}
.headImg image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.list-top-text{
  width: 100%;
  height: 80rpx;
  margin-top: 40rpx;
  background-color: yellow;
}
.user{
  display: block;
}
.userName{
  width: 150rpx;
  height: 100%;
  float: left;
  margin-left: 20rpx;
  text-align: center;
  background-color: lightblue;
}
.userClock{
  width: 200rpx;
  height: 76rpx;
  float: right;
  margin-right: 20rpx;
  background-color: red;
  border-radius: 40rpx;
  text-align: center;
  border: 2rpx white solid;
}
.userClock image{
  margin-top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.userClock text{
  color: white;
  font-size: 32rpx;
}
